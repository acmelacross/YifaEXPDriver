<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
     xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_menu"
      android:layout_gravity="center"
    >
    
    

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_menu"
    android:orientation="vertical" >
    

      <RelativeLayout
        android:id="@+id/actPoiTitle"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/gray_bg_main"
     >
    <ImageView 
        android:id="@+id/imgvPoiTitleBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_title_bar"
        android:layout_margin="5dp"
        />
        <TextView 
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="21sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/gray_font"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivMenuDingdan"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_button_menu_shoufei" >
            </ImageView>

            <ImageButton
                 android:id="@+id/ivMenuTuhao"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_button_menu_tuhao" >
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal" >

            <ImageView
                 android:id="@+id/ivMenuYijianfankui"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_button_menu_yijian" >
            </ImageView>

            <ImageView
                 android:id="@+id/ivMenuPeisong"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_button_menu_peisong" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal" >

            <ImageView
                 android:id="@+id/ivMenuTongzhi"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_button_menu_genghuan" >
            </ImageView>

            <ImageView
                 android:id="@+id/ivMenuQita"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_button_menu_qita" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>