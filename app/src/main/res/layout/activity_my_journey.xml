<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
>
      <include 
            android:id="@+id/menu"
            layout="@layout/view_title"/>
      
      <RelativeLayout
           android:id="@+id/rlInfo"
    		android:layout_width="match_parent"
    		android:layout_height="140dp"
    		android:background="@color/white"
    		android:layout_below="@id/menu"
           >
           <LinearLayout 
               android:id="@+id/journeyLl"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="90dp"
               >
             <ImageView 
                 android:background="@drawable/user_menu_normal"
                 android:layout_width="70dp"
                 android:layout_height="70dp"
                 android:layout_margin="10dp"
                 />
              <TextView 
                  android:id="@+id/journeyTvUName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="13305364454"
                 android:layout_gravity="center"
                  />
           </LinearLayout>
           <View 
               android:layout_width="match_parent"
               android:layout_height="1px"
               android:background="@color/bg_gray"
               android:layout_below="@id/journeyLl"
               />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_below="@id/journeyLl" >

               <TextView
                   android:id="@+id/textView1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                   android:text="总收入"
                    android:textColor="@color/black"
                   android:textSize="19.5sp" />

               <ImageView
                   android:id="@+id/viewTemp"
                   android:layout_width="1px"
                   android:layout_height="match_parent"
                   android:layout_centerInParent="true"
                   android:background="@color/bg_gray" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toLeftOf="@id/viewTemp"
                    android:layout_centerVertical="true"
                   android:text="0.0"
                   android:textColor="@color/gray_font"
                   android:layout_marginRight="15dp"
                   android:textSize="17.5sp" />
               
               
                 <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="未提工资"
                   android:textColor="@color/black"
                   android:textSize="19.5sp"
                   android:layout_toRightOf="@id/viewTemp"
                      android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                    />
                     <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="0.0"
                   android:textColor="@color/gray_font"
                   android:textSize="17.5sp"
                      android:layout_centerVertical="true"
                   android:layout_marginRight="15dp"
                   android:layout_alignParentRight="true"
                    />

           </RelativeLayout>
            <View 
               android:layout_width="match_parent"
               android:layout_height="1px"
               android:background="@color/bg_gray"
               android:layout_alignParentBottom="true"
               />
      </RelativeLayout>
       <View 
           android:id="@+id/aaa"
               android:layout_width="match_parent"
               android:layout_height="20dp"
               android:background="@color/bg_gray"
                android:layout_below="@id/rlInfo"
               />

<ListView
    android:id="@+id/lvMyJourney"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/aaa"
     >
    
    
</ListView>

</RelativeLayout>
